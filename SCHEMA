{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HBCE-OIS Identity Primary Record (IPR)",
  "type": "object",
  "required": [
    "ipr_id",
    "issuer",
    "issued_at",
    "anchor_hash",
    "integrity",
    "status"
  ],
  "properties": {
    "ipr_id": {
      "type": "string",
      "description": "Unique identifier of the Identity Primary Record"
    },
    "issuer": {
      "type": "string",
      "description": "Entity issuing the IPR"
    },
    "issued_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 issuance timestamp"
    },
    "anchor_hash": {
      "type": "string",
      "pattern": "^[a-fA-F0-9]{64}$",
      "description": "SHA-256 cryptographic anchor hash"
    },
    "integrity": {
      "type": "string",
      "pattern": "^[a-fA-F0-9]{64}$",
      "description": "Integrity checksum of the full IPR object"
    },
    "status": {
      "type": "string",
      "enum": ["ACTIVE", "REVOKED", "SUSPENDED"],
      "description": "Operational status of the IPR"
    },
    "scope": {
      "type": "object",
      "description": "Operational scope metadata",
      "properties": {
        "category": {
          "type": "string",
          "description": "Operational actor category"
        },
        "jurisdiction": {
          "type": "string",
          "description": "Applicable jurisdiction"
        }
      }
    },
    "previous_hash": {
      "type": "string",
      "pattern": "^[a-fA-F0-9]{64}$",
      "description": "Hash reference to previous append-only state"
    }
  }
}
